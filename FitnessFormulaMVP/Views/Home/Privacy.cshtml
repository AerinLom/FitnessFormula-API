@{
    ViewData["Title"] = "Success";
    var username = TempData["Username"] as string; // Retrieve username from TempData
    var successMessage = TempData["SuccessMessage"] as string; // Retrieve success message from TempData
}

<div style="text-align: center; margin-top: 50px;">
    <h1 style="color: gold; font-size: 2.5em;">Welcome, @username!</h1>
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <p style="font-size: 1.2em; margin-top: 20px; color: white;">@successMessage</p>
    }
</div>
